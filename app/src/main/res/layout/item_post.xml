<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

        <ImageView
            android:id="@+id/post_user_avatar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:src="@drawable/img_profil" />

        <TextView
            android:id="@+id/nick"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/post_user_avatar"
            android:text="joshua_l"
            android:layout_marginStart="5dp"
            android:layout_alignTop="@id/post_user_avatar"
            android:textColor="@color/black"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/nick"
            android:layout_marginVertical="1dp"
            android:layout_toRightOf="@+id/post_user_avatar"
            android:layout_alignBottom="@id/post_user_avatar"
            android:layout_marginStart="5dp"
            android:text="Tokyo, Japan"
            android:textColor="@color/black"
            android:textSize="10sp" />

        <ImageView
            android:id="@+id/more"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginHorizontal="10dp"
            android:layout_marginVertical="10dp"
            android:src="@drawable/ic_more" />

    <ImageView
        android:id="@+id/img_post"
        android:scaleType="fitXY"
        android:layout_marginTop="11dp"
        android:layout_below="@id/location"
        android:layout_width="fill_parent"
        android:layout_height="375dp"
        android:src="@drawable/img_post" />





</RelativeLayout>